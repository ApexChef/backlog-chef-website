      height: 100vh;
      padding: 60px 80px;
      position: relative;
    }

    .slide.active {
      display: flex;
      flex-direction: column;
    }

    .slide-number {
      position: absolute;
      bottom: 30px;
      right: 40px;
      font-size: 14px;
      color: #64748b;
    }

    .logo {
      position: absolute;
      top: 30px;
      left: 40px;
      font-size: 18px;
      font-weight: bold;
      color: #3b82f6;
    }

    h1 {
      font-size: 56px;
      font-weight: 800;
      margin-bottom: 30px;
      line-height: 1.1;
    }

    h2 {
      font-size: 42px;
      font-weight: 700;
      margin-bottom: 40px;
      color: #3b82f6;
    }

    h3 {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 20px;
    }

    p {
      font-size: 24px;
      line-height: 1.6;
      color: #cbd5e1;
    }

    .big-number {
      font-size: 72px;
      font-weight: 800;
      color: #3b82f6;
    }

