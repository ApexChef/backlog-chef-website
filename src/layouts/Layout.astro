---
import '../styles/global.css';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import Logo from '../components/brand/Logo.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath, type Lang } from '../i18n/ui';

interface Props {
  title: string;
  description?: string;
  lang?: Lang;
}

const currentLang = Astro.props.lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
const { title, description = t('footer.tagline') } = Astro.props;

// Helper to get localized link
const localPath = (path: string) => getLocalizedPath(path, currentLang);
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="alternate" hreflang="en" href={`https://backlogchef.com/en${Astro.url.pathname.replace(/^\/(en|nl)/, '')}`} />
    <link rel="alternate" hreflang="nl" href={`https://backlogchef.com/nl${Astro.url.pathname.replace(/^\/(en|nl)/, '')}`} />
    <link rel="alternate" hreflang="x-default" href={`https://backlogchef.com/en${Astro.url.pathname.replace(/^\/(en|nl)/, '')}`} />
    <!-- Preload critical fonts -->
    <link rel="preload" href="/fonts/MontserratAlt1-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/MontserratAlt1-SemiBold.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/MontserratAlt1-Bold.woff2" as="font" type="font/woff2" crossorigin />
    <!-- Inter for readable body text -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-warm-50">
    <!-- Navigation -->
    <nav class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-warm-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <Logo variant="text" theme="light" size="md" showTagline={true} />

          <div class="hidden md:flex items-center gap-8">
            <a href={`${localPath('/')}#cli`} class="text-warm-600 hover:text-plum-700 font-medium transition">{t('nav.cli')}</a>
            <a href={`${localPath('/')}#web`} class="text-warm-600 hover:text-plum-700 font-medium transition">{t('nav.web')}</a>
            <a href={`${localPath('/')}#features`} class="text-warm-600 hover:text-plum-700 font-medium transition">{t('nav.features')}</a>
            <a href={`${localPath('/')}#pricing`} class="text-warm-600 hover:text-plum-700 font-medium transition">{t('nav.pricing')}</a>
            <a href={localPath('/docs')} class="text-warm-600 hover:text-plum-700 font-medium transition">{t('nav.docs')}</a>
            <LanguageSwitcher />
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden flex items-center gap-4">
            <LanguageSwitcher />
          </div>
        </div>
      </div>
    </nav>

    <slot />

    <!-- Footer -->
    <footer class="bg-plum-900 text-mauve-100 mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <Logo variant="text" theme="dark" size="lg" linkToHome={false} />
            <p class="text-mauve-300 mt-4">{t('footer.tagline')}</p>
          </div>
          <div>
            <h4 class="font-semibold text-lg mb-4">{t('footer.quickLinks')}</h4>
            <ul class="space-y-2 text-mauve-300">
              <li><a href={`${localPath('/')}#cli`} class="hover:text-amber-300 transition">{t('footer.cliCommands')}</a></li>
              <li><a href={`${localPath('/')}#web`} class="hover:text-amber-300 transition">{t('footer.webInterface')}</a></li>
              <li><a href={`${localPath('/')}#features`} class="hover:text-amber-300 transition">{t('footer.features')}</a></li>
              <li><a href={`${localPath('/')}#pricing`} class="hover:text-amber-300 transition">{t('footer.pricing')}</a></li>
              <li><a href={localPath('/docs')} class="hover:text-amber-300 transition">{t('footer.documentation')}</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-lg mb-4">{t('footer.createdBy')}</h4>
            <p class="text-mauve-200">Alwin (ApexChef)</p>
            <p class="text-mauve-400 text-sm mt-2">{t('footer.role')}</p>
          </div>
        </div>
        <div class="border-t border-plum-700 mt-8 pt-8 text-center text-mauve-400 text-sm">
          <p>&copy; {new Date().getFullYear()} Backlog Chef. {t('footer.copyright')}</p>
        </div>
      </div>
    </footer>
  </body>
</html>
