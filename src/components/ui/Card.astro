---
interface Props {
  variant?: 'default' | 'elevated' | 'accent' | 'dark';
  padding?: 'sm' | 'md' | 'lg';
  hover?: boolean;
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  hover = true,
  class: className = ''
} = Astro.props;

const variants: Record<string, string> = {
  default: 'bg-white border border-cream-200',
  elevated: 'bg-white shadow-lg',
  accent: 'bg-gradient-to-br from-blush to-peach',
  dark: 'bg-sage-800 text-cream-100'
};

const paddings: Record<string, string> = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const hoverStyles = hover ? 'hover:shadow-xl hover:-translate-y-1 transition-all duration-300' : '';

const classes = ['rounded-xl', variants[variant], paddings[padding], hoverStyles, className].join(' ');
---

<div class={classes}>
  <slot />
</div>
