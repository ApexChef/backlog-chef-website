---
import Badge from './Badge.astro';

interface Props {
  badge?: string;
  badgeVariant?: 'sage' | 'blush' | 'peach' | 'coral' | 'dark';
  title: string;
  description?: string;
  align?: 'left' | 'center';
  dark?: boolean;
}

const {
  badge,
  badgeVariant = 'sage',
  title,
  description,
  align = 'center',
  dark = false
} = Astro.props;

const titleColor = dark ? 'text-cream-100' : 'text-sage-900';
const descColor = dark ? 'text-cream-300' : 'text-sage-600';
---

<div class:list={['mb-12', align === 'center' ? 'text-center' : 'text-left']}>
  {badge && (
    <div class="mb-4">
      <Badge variant={badgeVariant}>
        {badge}
      </Badge>
    </div>
  )}
  <h2 class:list={['text-4xl font-bold mb-4', titleColor]}>{title}</h2>
  {description && (
    <p class:list={['text-lg', descColor, align === 'center' ? 'max-w-2xl mx-auto' : '']}>
      {description}
    </p>
  )}
</div>
